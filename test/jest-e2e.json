{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "y/wallet-api/(.*)": "<rootDir>/../libs/wallet-api/src/$1",
    "y/wallet-api": "<rootDir>/../libs/wallet-api/src"
  }
}