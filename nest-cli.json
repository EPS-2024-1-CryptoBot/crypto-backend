{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      "@nestjs/swagger/plugin"
    ],
    "webpack": true
  },
  "projects": {
    "wallet-api": {
      "type": "library",
      "root": "libs/wallet-api",
      "entryFile": "index",
      "sourceRoot": "libs/wallet-api/src",
      "compilerOptions": {
        "tsConfigPath": "libs/wallet-api/tsconfig.lib.json"
      }
    }
  }
}